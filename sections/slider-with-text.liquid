{{ 'section-slider-with-text.css' | asset_url | stylesheet_tag }}
{{ 'component-slider.css' | asset_url | stylesheet_tag }}
{{ 'component-slideshow.css' | asset_url | stylesheet_tag }}

<slideshow-component
  class="slider-with-text slider-mobile-gutter{% if section.settings.show_text_below %} mobile-text-below{% endif %} color-{{ section.settings.section_color_scheme }}{% if section.settings.show_top_border %} main-top__border{% endif %}{% if section.settings.show_bottom_border %} main-bottom__border{% endif %}"
  role="region"
  aria-roledescription="{{ 'sections.slideshow.carousel' | t }}"
  aria-label="{{ section.settings.accessibility_info | escape }}">


  <div
    class="slideshow banner grid grid--1-col slider slider--everywhere{% if section.settings.show_text_below %} banner--mobile-bottom{% endif %}{% if section.blocks.first.settings.image == blank %} slideshow--placeholder{% endif %}{% if settings.animations_reveal_on_scroll %} scroll-trigger animate--fade-in{% endif %}"
    id="Slider-{{ section.id }}"
    aria-live="polite"
    aria-atomic="true"
    data-speed="{{ section.settings.change_slides_speed }}">
    {%- for block in section.blocks -%}
      <style>
        #Slide-{{ section.id }}-{{ forloop.index }}
        .banner__media::after {
          opacity: {{ block.settings.image_overlay_opacity | divided_by: 100.0 }};
        }
      </style>
      <div
        class="slideshow__slide slider-with-text__slider grid__item grid--1-col slider__slide"
        id="Slide-{{ section.id }}-{{ forloop.index }}"
        {{ block.shopify_attributes }}
        role="group"
        aria-roledescription="{{ 'sections.slideshow.slide' | t }}"
        aria-label="{{ forloop.index }} {{ 'general.slider.of' | t }} {{ forloop.length }}"
        tabindex="-1">
        <div class="page-width slider-with-text__container">
          {%- if block.settings.slider_with_text_smal_title != blank or block.settings.slider_with_text_title != blank or block.settings.slider_with_text_smal_text != blank -%}
            <div class="slider-with-text__box">
              {%- if block.settings.slider_with_text_smal_title != blank -%}
                <p class="slider-with-text__first--text">
                  {{ block.settings.slider_with_text_smal_title }}
                </p>
              {%- endif -%}
              {%- if block.settings.slider_with_text_title != blank -%}
                <h4 class="slider-with-text__title">
                  {{ block.settings.slider_with_text_title }}
                </h4>
              {%- endif -%}
              {%- if block.settings.slider_with_text_smal_text != blank -%}
                <p class="slider-with-text__second--text">
                  {{ block.settings.slider_with_text_smal_text }}
                </p>
              {%- endif -%}
            </div>
          {%- endif -%}
        </div>
      </div>
    {%- endfor -%}
  </div>

  {%- if section.blocks.size > 1 -%}

    <button
      type="button"
      class="slider-button slider-button--prev slider-with-text__prev"
      name="previous"
      aria-label="{{ 'sections.slideshow.previous_slideshow' | t }}"
      aria-controls="Slider-{{ section.id }}">
        {% comment %} {% render 'icon-caret' %} {% endcomment %}
      PREVIOUS
    </button>

    <button
      type="button"
      class="slider-button slider-button--next slider-with-text__next"
      name="next"
      aria-label="{{ 'sections.slideshow.next_slideshow' | t }}"
      aria-controls="Slider-{{ section.id }}">
        {% comment %} {% render 'icon-caret' %} {% endcomment %}
      NEXT
    </button>

    <noscript>
      <div class="slider-buttons">
        <div class="slider-counter">
          {%- for block in section.blocks -%}
            <a
              href="#Slide-{{ section.id }}-{{ forloop.index }}"
              class="slider-counter__link link"
              aria-label="{{ 'sections.slideshow.load_slide' | t }} {{ forloop.index }} {{ 'general.slider.of' | t }} {{ forloop.length }}">
              {{ forloop.index }}
            </a>
          {%- endfor -%}
        </div>
      </div>
    </noscript>
  {%- endif -%}
</slideshow-component>

{%- if request.design_mode -%}
  <script src="{{ 'theme-editor.js' | asset_url }}" defer="defer"></script>
{%- endif -%}


{% schema %}
  {
    "name": "Slider with text",
    "class": "slider-with-text-section",
    "settings": [
      {
        "type": "color_scheme",
        "id": "section_color_scheme",
        "label": "Color scheme",
        "default": "background-1"
      }, {
        "type": "checkbox",
        "id": "show_top_border",
        "label": "Show top border",
        "default": false
      }, {
        "type": "checkbox",
        "id": "show_bottom_border",
        "label": "Show bottom border",
        "default": false
      }
    ],
    "blocks": [
      {
        "type": "slide",
        "name": "t:sections.slideshow.blocks.slide.name",
        "limit": 5,
        "settings": [
          {
            "type": "text",
            "id": "slider_with_text_smal_title",
            "label": "Small title",
            "default": "Small title"
          }, {
            "type": "textarea",
            "id": "slider_with_text_title",
            "label": "Text",
            "default": "Text"
          }, {
            "type": "text",
            "id": "slider_with_text_smal_text",
            "label": "Small text",
            "default": "Small text"
          }
        ]
      }
    ],
    "presets": [
      {
        "name": "Slider with text",
        "blocks": [
          {
            "type": "slide"
          }, {
            "type": "slide"
          }
        ]
      }
    ]
  }
{% endschema %}