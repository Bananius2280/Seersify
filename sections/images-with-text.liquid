{{ 'section-images-with-text.css' | asset_url | stylesheet_tag }}

<div class="images-with-text color-{{ section.settings.section_color_scheme }}">
  <div class="images-with-text__box page-width">
    {%- if section.settings.image_with_text_first_image != blank -%}
      <img
        class="images-with-text__img images-with-text__img--first"
        src="{{ section.settings.image_with_text_first_image | image_url: width: 426 }}"
        alt="{{ section.settings.image_with_text_first_image.alt | escape }}"
        width="213"
        height="167"
        loading="lazy">
    {%- endif -%}
    {%- if section.settings.images_with_text_title != blank -%}
      <h3 class="images-with-text__title">
        {{ section.settings.images_with_text_title }}
      </h3>
    {%- endif -%}
    {%- if section.settings.image_with_text_link_text != blank -%}
      <a class="images-with-text__link link-arrow" href="{{ section.settings.image_with_text_link }}">
        <span class="images-with-text__link--text">
          {{ section.settings.image_with_text_link_text }}
        </span>
        {% render 'icon-link-arrow' %}
      </a>
    {%- endif -%}
    {%- if section.settings.image_with_text_second_image != blank -%}
      <img
        class="images-with-text__img images-with-text__img--second"
        src="{{ section.settings.image_with_text_second_image | image_url: width: 426 }}"
        alt="{{ section.settings.image_with_text_second_image.alt | escape }}"
        width="213"
        height="167"
        loading="lazy">
    {%- endif -%}
  </div>
</div>


{% schema %}
  {
    "name": "Images with text",
    "class": "images-with-text-section",
    "settings": [
      {
        "type": "color_scheme",
        "id": "section_color_scheme",
        "label": "Color scheme",
        "default": "background-1"
      },
      {
        "type": "textarea",
        "id": "images_with_text_title",
        "label": "Heading",
        "default": "Welcome to my shop!"
      },
      {
        "type": "image_picker",
        "id": "image_with_text_first_image",
        "label": "First image"
      },
      {
        "type": "image_picker",
        "id": "image_with_text_second_image",
        "label": "Second image"
      }, {
        "type": "text",
        "id": "image_with_text_link_text",
        "label": "Title link",
        "default": "Link"
      }, {
        "type": "url",
        "id": "image_with_text_link",
        "label": "Link"
      }
    ],
    "presets": [
      {
        "name": "Images with text"
      }
    ]
  }
{% endschema %}